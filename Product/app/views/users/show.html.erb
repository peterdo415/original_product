<% set_meta_tags title: @user.name %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="card">
        <div class="card-header">
          <%= render @user %>
        </div>
        <div class="card-body">
          <div class="row">
            <%= render partial: '', collection: @user.quizzes, as: :quiz %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
